package fr.esisar.controller;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import fr.esisar.model.Format;

public class FormatDAO extends Format{
	private int idFormat;
	private int prixUnitaire;
	
	public boolean addFormatDAO (File fichier, Connection connect, int idFormat, int prixUnitaire) throws ClassNotFoundException, SQLException, IOException {
		Statement statement;
		boolean res = true;
		ResultSet result = null;
		statement = connect.createStatement();
		String sentence = "SELECT idFormat FROM Format";
		result = statement.executeQuery(sentence);
		while (result.next()) {
			if (idFormat == Integer.parseInt(result.getString("idFormat"))) {
				res = false;
			}
		}
		if (res == true) {
			String quer1 = "INSERT INTO Format (idFormat, prixUnitaire) ";
			String quer2 = "VALUES ('" + idFormat + "', '" + prixUnitaire + "')";
			result = statement.executeQuery(quer1 + quer2);
		}
		
		//Ecriture fichier log
		BufferedWriter bufferedWriter = new BufferedWriter(new FileWriter(fichier, true));
	    bufferedWriter.write("Suppression du format : " + idFormat + " prix : " + prixUnitaire +"\n");
	    bufferedWriter.newLine();
	    bufferedWriter.write("Effectué : "+res);
	    bufferedWriter.close();
		return res;
	}
	
	public boolean supprFormat (File fichier, Connection connect, int idFormat, int prixUnitaire) throws ClassNotFoundException, SQLException, IOException {
		Statement statement;
		boolean res = false;
		ResultSet result = null;
		statement = connect.createStatement();
		String sentence = "SELECT idFormat FROM Format";
		result = statement.executeQuery(sentence);
		while (result.next()) {
			if (idFormat == Integer.parseInt(result.getString("idFormat"))) {
				res = true;
				String sql = "DELETE  FROM Format WHERE idFormat='idFormat' and prixUnitaire='prixUnitaire'";
				result = statement.executeQuery(sql);
			}
		}
		//ecriture fichier log
		BufferedWriter bufferedWriter = new BufferedWriter(new FileWriter(fichier, true));
	    bufferedWriter.write("Suppression du format : " + idFormat + " prix : " + prixUnitaire +"\n");
	    bufferedWriter.newLine();
	    bufferedWriter.write("Effectué : "+res);
	    bufferedWriter.close();
		return res;
	}
}
